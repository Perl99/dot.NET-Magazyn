@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model GameStore.Domain.Entities.Product

@{
    ViewBag.Title = "Szczegóły";
}

<h2>Szczegóły</h2>

<div>
    <h4>Produkt</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Model.Name
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Model.Description
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd>
            @Model.Category
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Model.Price.ToString("c")
        </dd>
    </dl>
</div>
<p>
    @if (Model.OwnerLogin == @Session["Login"] as String)
    {
        @Html.ActionLink("Edytuj", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
    }
    @Html.ActionLink("Wróć do listy", "List", null, new { @class = "btn btn-primary" })
</p>