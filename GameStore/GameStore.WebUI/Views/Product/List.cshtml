@using GameStore.Domain.Entities;
@model IEnumerable<Product>

@{
    ViewBag.Title = "Produkty";
}

<h2>Lista produktów</h2>

@{
    var user = @Session["user"] as User;
}

@if (user != null)
{
    <h3>
        Zalogowany jako <b>@user.Name @user.Surname @user.Login</b>
    </h3>
    @Html.ActionLink("Logout", "Logout", "Login");
}


@foreach (var p in Model)
{
    <div>
        <h3>@p.Name --- @p.Price.ToString("c")</h3>
        @p.Description
        <br/>
        @Html.ActionLink("Szczegóły", "Details", new { id = p.Id })
    </div>
}

<hr/>
@Html.ActionLink("Dodaj", "Add")
