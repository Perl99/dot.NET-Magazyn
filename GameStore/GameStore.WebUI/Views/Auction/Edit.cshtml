@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model GameStore.WebUI.Models.AuctionViewModel

@{
    ViewBag.Title = "Edycja";
}

<h2>Edycja</h2>
@using (Html.BeginForm("DoEdit", "Auction"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Aukcja</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Auction.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Auction.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextAreaFor(model => model.Auction.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Auction.Description)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Products, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.ListBoxFor(model => model.SelectedProductIds, Model.Products, new { @class = "form-control", multiple ="multpile" })
                @Html.ValidationMessageFor(model => model.Products)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Wróć do listy", "List", null, new { @class = "btn btn-primary" })
</div>
